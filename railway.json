{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npx serve dist -s",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckTimeout": 60
  }
}
